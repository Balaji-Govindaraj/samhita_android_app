<?xml version="1.0" encoding="utf-8"?>

    
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <ScrollView  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/back1"
    android:fillViewport="true">
    <LinearLayout android:id="@+id/content_frame"
android:layout_width="fill_parent"
android:layout_height="wrap_content"

android:orientation="vertical"
 >
 
<TableLayout
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">
   
   <TableRow
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="20dp">
   <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OUR PARTNERS"
          android:textColor="#191975"
          android:textSize="18dp"
          android:textStyle="italic" 
          android:layout_column="1"/>
   
   </TableRow>
   
   <TableRow android:layout_marginTop="20dp"
   android:padding="10dip">
       <ImageView android:id="@+id/iv2"
       android:src="@drawable/ally"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="0"
       />
       <ImageView android:id="@+id/iv3"
       android:src="@drawable/amazon"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="1"
       />
       <ImageView android:id="@+id/iv4"
       android:src="@drawable/clay"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="2"
       />
	 </TableRow>
   
   <TableRow android:layout_marginTop="20dp"
   android:padding="10dip">
       <ImageView android:id="@+id/iv5"
       android:src="@drawable/globals"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="0"
       />
       <ImageView android:id="@+id/iv6"
       android:src="@drawable/hacker"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="1"
       />
       <ImageView android:id="@+id/iv7"
       android:src="@drawable/hackerrank"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="2"
       />
	 </TableRow>
   
   <TableRow android:layout_marginTop="20dp"
   android:padding="10dip">
       <ImageView android:id="@+id/iv8"
       android:src="@drawable/infysec"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="0"
       />
       <ImageView android:id="@+id/iv9"
       android:src="@drawable/report"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="1"
       />
       <ImageView android:id="@+id/iv10"
       android:src="@drawable/spice"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="2"
       />
	 </TableRow>
 	<TableRow android:layout_marginTop="20dp"
   	android:padding="10dip">
       <ImageView android:id="@+id/iv11"
       android:src="@drawable/uniq"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="0"
       />
       <ImageView android:id="@+id/iv12"
       android:src="@drawable/zoho1"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_column="1"
       />
      
	 </TableRow>
   
</TableLayout>
</LinearLayout>
</ScrollView>
 <LinearLayout 
        android:id="@+id/drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_gravity="start" >
		
     <!--   <TextView 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Samhita 2K16"
            android:background="@drawable/drawer_title_shape" />
            --> 
        
	    <ListView android:id="@+id/drawer_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/darker_gray"
	        android:dividerHeight="0.1dp"
	        android:textColor="@android:color/white"
	        android:background="#fff" />
    
    </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

